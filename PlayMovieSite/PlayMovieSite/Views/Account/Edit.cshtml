@model PlayMovieSite.Models.Usuario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/Edits.css" />

<style>
    body {
        background-color: darkgray;
    }

    .edit-box {
        margin: auto;
        box-sizing: border-box;
        background-color: transparent;
        font-family: 'Book Antiqua';
        color: black;
        width: 463px;
        height: 300px;
        font-size: 2rem;
        padding: 10px;
        text-align: center;
    }

    #nombreUsuario, #email, #password {
        background-color: white;
        color: black;
        width: 500px;
        height: 40px;
        border-radius: 5px;
        border-color: black;
        text-align: center;
    }

    input {
        margin-bottom: 30px;
    }

    #btnenviar {
        cursor: pointer;
        background-color: #FECA76;
        color: black;
        width: 120px;
        height: 40px;
        color: black;
        margin-top: 10px;
    }

    #box {
        display: flex;
        background-color: transparent;
        width: 400px;
    }

    #labels {
        text-align: start;
        background-color: transparent;
        padding: 15px;
        width: 200px;
        height: 213px;
    }

    label {
        margin-top: 7px;
        margin-bottom: 35px;
    }

    #text-box {
        text-align: start;
        width: 310px;
        height: 213px;
        background-color: transparent;
        padding: 15px;
        box-sizing: border-box;
    }

    #boton {
        background-color: red;
        text-align: center;
    }

    h2 {
        text-align: center;
        color: black;
        font-family: 'Book Antiqua';
        font-weight: bold;
    }
</style>

<h2 a>Actualizar datos</h2>
<br />
<body>
    <div class="edit-box">
        @using (Html.BeginForm("Edit", "Account", FormMethod.Post))
        {
            @Html.HiddenFor(a => a.idUsuario)
            <div id="box">
                <div id="labels">
                    <label>Nombre</label>
                    <br />
                    <label>Email</label>
                    <br />
                    <label>Contraseña</label>
                </div>
                <div id="text-box">
                    @Html.TextBoxFor(a => a.nombreUsuario)
                    @Html.TextBoxFor(a => a.email)
                    @Html.TextBoxFor(a => a.password)
                </div>
            </div>

            <input type="submit" value="Aceptar" id="btnenviar" />
        }
    </div>
</body>
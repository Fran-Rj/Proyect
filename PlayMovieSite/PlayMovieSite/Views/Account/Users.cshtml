@model List<PlayMovieSite.Models.Usuario>

@{
    ViewBag.Title = "Users";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
 }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <title>Users</title>
    <style>
        #imgAvatar {
            width: 100px;
            height: 100px;
        }

        h3 {
            text-align: center;
            font-weight: bold;
        }

        .a {
            color: white;
            text-decoration: none;
        }

        .a:hover {
            color: white;
            text-decoration: none;
        }
    </style>
</head>
<body style="font-family: 'Book Antiqua';">
    <header>
        <div class="dropdown text-center">
            <a href="#" class="btn btn-secondary dropdown-toggle" role="button" id="menu" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="~/Imagenes/Avatar.jpg" class="rounded-circle" id="imgAvatar" />
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <li>
                    <a class="dropdown-item">Configuración</a>
                </li>
                <li>
                    <a class="dropdown-item" href="https://localhost:44303/Account/Edit">Perfil</a>
                </li>
                <li>
                    <a class="dropdown-item">Cerrar sesión</a>
                </li>
            </ul>
        </div>
    </header>
    <br />
    <h3>Usuarios registrados</h3>
    <br />
    <br />
    <div style="font-size: 120%; text-align: center;">
        <table class="table table-bordered table-striped">
            <th style="text-align: center;">  Id           </th>
            <th style="text-align: center;">  Nombre       </th>
            <th style="text-align: center;">  Usuario      </th>
            <th style="text-align: center;">  Contraseña   </th>
            <th style="text-align: center;">  Acciones     </th>
            <tbody>
                @foreach (var ok in Model)
                 {
                    <tr>
                        <td>@ok.idUsuario</td>
                        <td>@ok.nombreUsuario</td>
                        <td>@ok.email</td>
                        <td>@ok.password</td>
                        <td>
                            @Html.ActionLink("Eliminar", "Delete", new { id = ok.idUsuario })
                            |
                            @Html.ActionLink("Actualizar", "Edit", new { id = ok.idUsuario })
                        </td>
                    </tr>
                 }
            </tbody>
        </table>
        <button class="btn btn-success btn-sm">@Html.ActionLink("Agregar", "Edit")</button>
    </div>
</body>
</html>
